{%- macro format_float(value, precision=2) -%}
{%- if frappe.utils.cint(precision) == 2 %}
{{ "%.3f" % value|abs }}
{%- elif frappe.utils.cint(precision) == 2 -%}
{{ "%.4f" % value|abs }}
{%- else -%}
{{ "%.2f" % value|abs }}
{%- endif %}
{%- endmacro -%}
